<!DOCTYPE html>
<html lang="en">
   <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="../styles/layout.css">
    <%include ./partials/_header.ejs%>
  </head>

  <body>
    <main>
      <section class="eat-watch-section">
        <div><span>Eat</span><br><%= tasks.e%></div>
        <div style="margin-left:97px";><span>Watch</span><br><%= tasks.w%></div>
      </section>

      <section class="input-section">
        <form method="POST" action="/new_task">
          <input name="task" class="text-for-task" type="text"  placeholder="Enter task here!!" />
          <button>SUBMIT</button>
        </form>
      </section>

      <section class="read-buy-section">
         <div><span>Read</span><br><%= tasks.r%></div>
        <div style="margin-left:97px;"><span>Buy</span><br><%= tasks.b%></div>
      </section>
    </main>
  </body>
</html>
